rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Spot photos folder
    match /spot_photos/{spotId}/{allPaths=**} {
      // Public read access to photos
      allow read: if true;

      // Only authenticated users can upload images; limit size and content-type
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024 // < 5 MB
        && request.resource.contentType.matches('image/.*');

      // Only admins can delete (or owner via backend rule)
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Deny write for other paths by default, allow reads
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
